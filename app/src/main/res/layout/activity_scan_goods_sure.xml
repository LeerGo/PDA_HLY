<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="viewModel"
            type="com.arpa.wms.hly.logic.home.inventory.move.vm.VMScanGoodsSure" />
    </data>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <com.arpa.wms.hly.ui.widget.WidgetTitleBar
            android:id="@+id/wtb_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:wtbTitle="移位确认" />
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_operation"
            android:layout_below="@id/wtb_title">
            
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    android:paddingTop="10dp"
                    app:propsKey="移出库位"
                    app:propsValue="@{viewModel.liveData.locationName}"
                    app:propsValueGravity="end"
                    tools:propsValue="RELSKW" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="商品名称"
                    app:propsValue="@{viewModel.liveData.goodsName}"
                    app:propsValueGravity="end"
                    tools:propsValue="伊利优酸乳" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="单        位"
                    app:propsValue="@{viewModel.liveData.goodsUnit}"
                    app:propsValueGravity="end"
                    tools:propsValue="瓶" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="库存数量"
                    app:propsValue="@{String.valueOf(viewModel.liveData.inventoryList.get(0).quantity)}"
                    app:propsValueGravity="end"
                    tools:propsValue="200" />
                
                <androidx.appcompat.widget.LinearLayoutCompat
                    style="@style/ScanGoodSureStyle">
                    
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="库存状态"
                        android:textColor="@color/grey_96a0b9"
                        android:textSize="14sp" />
                    
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.liveData.inventoryList.get(0).goodsStatusName}"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        tools:text="合格" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="供  应  商"
                    app:propsValue="@{viewModel.liveData.inventoryList.get(0).supplier}"
                    app:propsValueGravity="end"
                    tools:propsValue="测试供应商" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="序  列  号"
                    app:propsValue="@{viewModel.liveData.inventoryList.get(0).serialNumber}"
                    app:propsValueGravity="end"
                    tools:propsValue="RXM1-ZR9O-BUVB" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="产        地"
                    app:propsValue="@{viewModel.liveData.inventoryList.get(0).extendOne}"
                    app:propsValueGravity="end"
                    tools:propsValue="成都" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="特殊品项"
                    app:propsValue="@{viewModel.liveData.inventoryList.get(0).extendTwo}"
                    app:propsValueGravity="end"
                    tools:propsValue="常规" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="生产日期"
                    app:propsValue="@{viewModel.liveData.inventoryList.get(0).gmtManufacture}"
                    app:propsValueGravity="end"
                    tools:propsValue="2021-05-11" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="过期日期"
                    app:propsValue="@{viewModel.liveData.inventoryList.get(0).gmtExpire}"
                    app:propsValueGravity="end"
                    tools:propsValue="2021-05-11" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="存货日期"
                    app:propsValue="@{viewModel.liveData.inventoryList.get(0).gmtStock}"
                    app:propsValueGravity="end"
                    tools:propsValue="2021-05-11" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="拓  展   3"
                    app:propsValue="@{viewModel.liveData.inventoryList.get(0).extendThree.toString()}"
                    app:propsValueGravity="end"
                    tools:propsValue="T3" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="拓  展   4"
                    app:propsValue="@{viewModel.liveData.inventoryList.get(0).extendFour.toString()}"
                    app:propsValueGravity="end"
                    tools:propsValue="T4" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="拓  展   5"
                    app:propsValue="@{viewModel.liveData.inventoryList.get(0).extendFive}"
                    app:propsValueGravity="end"
                    tools:propsValue="2021-05-11" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    app:propsKey="拓  展   6"
                    app:propsValue="@{viewModel.liveData.inventoryList.get(0).extendSix}"
                    app:propsValueGravity="end"
                    tools:propsValue="2021-05-11" />
                
                <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                    style="@style/ScanGoodSureStyle"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    app:propsKey="码托数量"
                    app:propsValue="@{viewModel.liveData.inventoryList.get(0).supportNum.toString()}"
                    app:propsValueGravity="end"
                    tools:propsValue="100" />
                
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    app:divider="@drawable/divider_line_horizontal"
                    app:showDividers="middle">
                    
                    <com.arpa.wms.hly.ui.widget.WidgetInputItem
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        app:inputHint="请扫描/输入移位数量"
                        app:inputMax="@{viewModel.liveData.inventoryList.get(0).quantity}"
                        app:inputTitle="移位数量"
                        app:inputType="number"
                        app:inputValue="@={viewModel.moveQuantity}" />
                    
                    <com.arpa.wms.hly.ui.widget.WidgetInputItem
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        app:inputHint="请扫描/输入移入库位"
                        app:inputIcon="@mipmap/ic_scan"
                        app:inputText="@={viewModel.moveLocation}"
                        app:inputTitle="移入库位" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
        
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_operation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp">
            
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rrect_blue_border_r5"
                android:onClick="@{()->viewModel.finish()}"
                android:text="取消"
                android:textColor="@color/colorPrimary" />
            
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rrect_blue_gradient_r5"
                android:onClick="@{()->viewModel.moveConfirm()}"
                android:text="确认"
                android:textColor="@color/white" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</layout>
