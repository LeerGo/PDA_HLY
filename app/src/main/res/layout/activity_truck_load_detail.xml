<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="viewModel"
            type="com.arpa.wms.hly.logic.home.truckload.vm.VMTruckLoadDetail" />
    </data>
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <com.arpa.wms.hly.ui.widget.WidgetTitleBar
            android:id="@+id/widgetTitleBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:wtbTitle="装车详情" />
        
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="12dp">
            
            <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:propsKey="车牌号"
                app:propsValue="鲁A12345"
                app:propsValueGravity="end" />
            
            <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:propsKey="司机名称"
                app:propsValue="刘二"
                app:propsValueGravity="end" />
            
            <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:propsKey="司机电话"
                app:propsValue="13133333333"
                app:propsValueGravity="end" />
            
            <com.arpa.wms.hly.ui.widget.WidgetPropsItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:propsKey="预计装车高度"
                app:propsValue="2 m"
                app:propsValueGravity="end" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        
        <!--TODO: 这里不需要分页 API 与@夏宝新 沟通 @lyf 2021-05-12 02:30:31 -->
        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:autoRefresh="@{viewModel.isAutoRefresh}"
            app:hasMore="@{viewModel.hasMore}"
            app:moreLoading="@{viewModel.moreLoading}"
            app:onLoadMoreListener="@{()->viewModel.loadMore()}"
            app:onRefreshListener="@{()->viewModel.refresh()}"
            app:refreshing="@{viewModel.refreshing}"
            app:srlEnableFooterFollowWhenNoMoreData="true"
            app:srlEnableLoadMore="true"
            app:srlEnablePreviewInEditMode="true">
            
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:itemBinding="@{viewModel.itemBinding}"
                app:items="@{viewModel.items}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="20"
                tools:listitem="@layout/item_truck_load_detail" />
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>