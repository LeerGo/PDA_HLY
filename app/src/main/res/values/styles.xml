<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="TitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="MineButtonBaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginHorizontal"
              tools:ignore="NewApi">12dp
        </item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>
    
    <style name="MineButtonStyle"
           parent="MineButtonBaseStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TabTextStyle">
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="TaskButtonStyle">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/shape_rrect_blue_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TaskPropsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
    <style name="TaskPropsRightStyle"
           parent="TaskPropsStyle">
        <item name="android:layout_marginStart">12dp</item>
    </style>
</resources>