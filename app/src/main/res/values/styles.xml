<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="WWrapHWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WMatchHWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WWeightHWrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BaseEditTextStyle">
        <item name="android:textColor">@color/color_434c67</item>
        <item name="android:textColorHint">@color/color_hint_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MineButtonBaseStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginHorizontal"
              tools:ignore="NewApi">12dp
        </item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="MineButtonStyle"
           parent="MineButtonBaseStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/color_434c67</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TaskButtonStyle">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/shape_rrect_blue_gradient_r5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TaskButtonLeftStyle"
           parent="TaskButtonStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/shape_rrect_blue_border_r5</item>
    </style>

    <style name="TaskPropsStyle"
           parent="WWrapHWrap">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TaskPropsWeightStyle"
           parent="WWeightHWrap">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TaskPropsRightStyle"
           parent="TaskPropsStyle">
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="InventoryQueryItemBase"
           parent="WMatchHWrap">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="InventoryQueryItem"
           parent="InventoryQueryItemBase">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ScanGoodSureStyle"
           parent="WMatchHWrap">
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="ItemRecheckBatchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ItemRecheckBatchSNStyle"
           parent="ItemRecheckBatchStyle">
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="GoodsRecheckConfirmStyle"
           parent="WMatchHWrap">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">@dimen/dp_15</item>
        <item name="android:paddingEnd">@dimen/dp_15</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ModifyPassInputStyle"
           parent="BaseEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@drawable/shape_round_gray_border_r30</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TableTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/shape_rrect_border_grey</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TableTextStyleCP"
           parent="TableTextStyle">
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/shape_rrect_border_grey_cp</item>
    </style>

    <style name="TruckItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- dialog animation -->
    <style name="ArpaDialogAnimationTrans"
           parent="android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>

    <style name="PickEditInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_434c67</item>
        <item name="android:textColorHint">#B6BED2</item>
        <item name="android:background">@drawable/shape_rrect_border_bluegrey_r5</item>
    </style>

    <style name="PickEditLabel" parent="WWrapHWrap">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_434c67</item>
    </style>
</resources>
