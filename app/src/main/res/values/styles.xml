<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="WWrapHWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WMatchHWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="TitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="MineButtonBaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginHorizontal"
              tools:ignore="NewApi">12dp
        </item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>
    
    <style name="MineButtonStyle"
           parent="MineButtonBaseStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TabTextStyle">
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="TaskButtonStyle">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/shape_rrect_blue_gradient_r5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TaskPropsStyle"
           parent="WWrapHWrap">
        <item name="android:layout_marginTop">12dp</item>
    </style>
    <style name="TaskPropsRightStyle"
           parent="TaskPropsStyle">
        <item name="android:layout_marginStart">12dp</item>
    </style>
    
    <style name="InventoryQueryItemBase"
           parent="WMatchHWrap">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>
    <style name="InventoryQueryItem"
           parent="InventoryQueryItemBase">
        <item name="android:layout_marginTop">8dp</item>
    </style>
    
    <style name="ScanGoodSureStyle"
           parent="WMatchHWrap">
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>
    
    <style name="ItemRecheckBatchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="GoodsRecheckConfirmStyle"
           parent="WMatchHWrap">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">@dimen/dp_15</item>
        <item name="android:paddingEnd">@dimen/dp_15</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <!-- dialog animation -->
    <style name="ArpaDialogAnimationTrans"
           parent="android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>
</resources>