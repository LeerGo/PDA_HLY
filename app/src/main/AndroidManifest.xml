<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.arpa.wms.hly">
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="UnusedAttribute">
        
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".logic.LoginActivity" />
        <activity android:name=".logic.home.HomeActivity" />
        <activity android:name=".logic.mine.MineActivity" />
        <!--任务中心-->
        <activity android:name=".logic.task.TaskCenterActivity">
            <intent-filter>
                <action android:name="arpa.wms.TASK_CENTER" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".logic.task.TaskGoodsTakeActivity" />
        <activity android:name=".logic.task.TaskGoodsPickActivity" />
        <!--收货-->
        <activity android:name=".logic.home.goods.take.GoodsTakeActivity">
            <intent-filter>
                <action android:name="arpa.wms.GOODS_TAKE" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".logic.home.goods.take.GoodsTakeDetailActivity" />
        <activity
            android:name=".logic.home.goods.take.GoodsTakeConfirmActivity"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <!--拣货-->
        <activity
            android:name=".logic.home.goods.pick.GoodsPickActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="arpa.wms.GOODS_PICK" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--复核-->
        <activity android:name=".logic.home.goods.recheck.GoodsRecheckActivity">
            <intent-filter>
                <action android:name="arpa.wms.GOODS_RECHECK" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".logic.home.goods.recheck.GoodsRecheckDetailActivity" />
        <activity android:name=".logic.home.goods.recheck.GoodsRecheckConfirmActivity" />
        <activity
            android:name=".logic.home.goods.recheck.GoodsRecheckBatchActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        
        <!--装车-->
        <activity android:name=".logic.home.truckload.TruckLoadActivity">
            <intent-filter>
                <action android:name="arpa.wms.TRUCK_LOAD" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".logic.home.truckload.TruckLoadDetailActivity" />
        <activity android:name=".logic.home.truckload.TruckLoadConfirmActivity" />
        <!--移位-->
        <activity android:name=".logic.home.inventory.move.ScanLocationActivity">
            <intent-filter>
                <action android:name="arpa.wms.INVENTORY_MOVE" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".logic.home.inventory.move.ScanGoodsActivity" />
        <activity android:name=".logic.home.inventory.move.ScanGoodsDetailActivity" />
        <activity android:name=".logic.home.inventory.move.ScanGoodsSureActivity" />
        <!--库存查询-->
        <activity android:name=".logic.home.inventory.query.InventoryQueryActivity">
            <intent-filter>
                <action android:name="arpa.wms.INVENTORY_QUERY" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- App 全局配置 -->
        <meta-data
            android:name="com.arpa.wms.hly.base.AppConfigModule"
            android:value="FrameConfigModule" />
    </application>
</manifest>