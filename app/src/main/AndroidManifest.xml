<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.arpa.wms.hly">
    
    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".logic.LoginActivity" />
        <activity android:name=".logic.home.HomeActivity" />
        <activity android:name=".logic.mine.MineActivity" />
        <activity android:name=".logic.task.TaskCenterActivity">
            <intent-filter>
                <action android:name="arpa.wms.TASK_CENTER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".logic.home.inventory.move.ScanLocationActivity">
            <intent-filter>
                <action android:name="arpa.wms.INVENTORY_MOVE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".logic.home.inventory.move.ScanGoodsActivity" />
        
        <meta-data
            android:name="design_width_in_dp"
            android:value="375"/>
        <meta-data
            android:name="design_height_in_dp"
            android:value="667"/>
    </application>

</manifest>